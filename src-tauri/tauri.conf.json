{
	"productName": "Selenite",
	"version": "../package.json",
	"identifier": "fr.selenite.geos-graph-editor",
	"build": {
		"beforeDevCommand": "bun dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Selenite - GEOS Graph Editor",
				"resizable": true,
				"maximized": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
